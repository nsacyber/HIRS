<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.2//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Ignore Auto generated files -->
    <suppress files="[/\\]hirs[/\\]utils[/\\]xjc[/\\]" checks=".*"/>
    <suppress files="ProvisionerTpm2.java" checks=".*"/>

    <!-- HIRS_Utils -->
    <!-- This ignores checking all public variable for a javadoc -->
    <suppress files="SwidTagConstants.java" checks="LineLength"/>
    <suppress files="SwidTagConstants.java" checks="JavadocVariable"/>
    <suppress files="IanaHashAlg.java" checks="JavadocVariable"/>
    <suppress files="Swid.java" checks="JavadocVariable"/>
    <suppress files="CoRim.java" checks="JavadocVariable"/>
    <suppress files="CoRimItems.java" checks="JavadocVariable"/>
    <suppress files="ConciseTLTagItems.java" checks="JavadocVariable"/>
    <suppress files="FlagsItems.java" checks="JavadocVariable"/>
    <!-- This ignores checking all magic numbers -->
    <suppress files="DefaultCrypto.java" checks="MagicNumber"/>
    <suppress files="CborBstr.java" checks="MagicNumber"/>
    <suppress files="MetaMap.java" checks="MagicNumber"/>
    <suppress files="CoswidBuilder.java" checks="MagicNumber"/>
    <suppress files="CoswidParser.java" checks="MagicNumber"/>
    <suppress files="CoRimBuilder.java" checks="MagicNumber"/>
    <suppress files="CoRimConfig.java" checks="MagicNumber"/>
    <suppress files="CoRimParser.java" checks="MagicNumber"/>
    <suppress files="CoRimValidity.java" checks="MagicNumber"/>
    <suppress files="CborTagProcessor.java" checks="MagicNumber"/>
    <suppress files="HexByteArrayDeserializer.java" checks="MagicNumber"/>
    <!-- This ignores checking all protected variables -->
    <suppress files="CoRim.java" checks="VisibilityModifier"/>
    <suppress files="CoRimParser.java" checks="VisibilityModifier"/>
    <suppress files="Coswid.java" checks="VisibilityModifier"/>
    <suppress files="CoswidBuilder.java" checks="VisibilityModifier"/>
    <suppress files="CoswidConfig.java" checks="VisibilityModifier"/>
    <suppress files="CoswidConfigValidator.java" checks="VisibilityModifier"/>
    <suppress files="CoswidParser.java" checks="VisibilityModifier"/>
    <suppress files="Swid.java" checks="VisibilityModifier"/>
    <suppress files="CborTagProcessor.java" checks="VisibilityModifier"/>
    <suppress files="CoseHeader.java" checks="VisibilityModifier"/>
    <suppress files="TcgCompRimCoswid.java" checks="VisibilityModifier"/>

    <!-- This ignores checking for public constructors in utility classes in certain files -->
    <suppress files="HIRSApplication.java" checks="HideUtilityClassConstructor"/>
    <suppress files="PersistenceConfiguration.java" checks="HideUtilityClassConstructor"/>
</suppressions>